extends ../layout

block content
  .container
    .row
      .span12
        h2 List of courses
        table.table
          tr
            th Department
            th Number
            th Name
            th Actions
          -each course in courses
            tr
              td=course.department
              td=course.number
              td
                a(href="/courses/#{course.id}")=course.name
              td
                a.btn(href="/courses/#{course.id}/destroy") Delete
        a.btn(href="/courses/add") Add new course
        -if(loggedIn)
          h2 Courses taking
          table.table
            tr
              th Department
              th Number
              th Name
              th Actions
            -each course in coursesTaking
              tr
                td=course.department
                td=course.number
                td
                  a(href="/courses/#{course.id}")=course.name
                td
                  a.btn(href="/courses/#{course.id}/unroll") Unroll

