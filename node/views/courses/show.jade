extends ../layout

block content
  .container
    .row
      .span3
        h2 List of students
        table.table
          tr
            td
              p Student 1
          tr
            td
              p Student 2

        p 
          a.btn Add new student
      .span9
        h2 List of lectures
        table.table
          tr
            th Name
            th Date
          -each lecture in course.lectures
            tr
              td #{lecture.name}
              td #{lecture.day}
        p
          a.btn(href="/courses/#{course.id}/lectures/add") Add new lecture
           

